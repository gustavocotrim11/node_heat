{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "esModuleInterop": true,                       /* Disable resolving symlinks to their realpath. This correlates to the same flag in node. */
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,   
    "typeRoots": ["./src/@types", "node_modules/@types"]                              /* Skip type checking all .d.ts files. */
  }
}
